<div class="comment-form">
  <%= form_with(model: @comment, local: true, html: { class: "comment-form" }) do |form| %>
    <% if @comment.errors.any? %>
      <div class="error-explanation">
        <h2>Â¡Ups! Hubo un problema al crear el comentario:</h2>
        <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :publication_id, value: @publication.id %>
    <div class="input-group py-2">
      <%= form.label :content, "Nuevo Comentario", class: "input-group-text", style: "background-color: #e3f2fd;" %>
      <%= form.text_area :content, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-end mt-2">
      <%= form.submit "Guardar Comentario", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
