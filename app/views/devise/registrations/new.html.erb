<div class="container registration-form">
  <h2 class="registration-title">¡Únete a los gatitos locos!</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "registration-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, "Nombre", class: "form-label registration-label" %>
      <%= f.text_field :name, placeholder: "Tu nombre", class: "form-control registration-input", 
        autofocus: true, autocomplete: "new-name" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Correo Electrónico", class: "form-label registration-label" %>
      <%= f.email_field :email, placeholder: "Tu correo electrónico", autocomplete: "email", class: "form-control registration-input" %>
    </div>

    <div class="mb-3">
      <%= f.label :image, "Imagen de Perfil", class: "form-label registration-label" %>
      <%= f.text_field :image, placeholder: "URL de tu imagen de perfil", autocomplete: "new-image", class: "form-control registration-input" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Contraseña", class: "form-label registration-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control registration-input" %>
      <% if @minimum_password_length %>
        <p class="password-hint"><%= pluralize(@minimum_password_length, "caracter mínimo") %></p>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirmar Contraseña", class: "form-label registration-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control registration-input" %>
    </div>

    <%= f.submit "Registrarse", class: "btn btn-primary registration-button" %>
  <% end %>
</div>
