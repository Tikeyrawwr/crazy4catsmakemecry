<h2>Cambia tu Contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="input-group py-2">
    <%= f.label :password, "Nueva Contrase単a", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <em class="input-group-text" style="background-color: #e3f2fd;">
        (<%= @minimum_password_length %> caracteres minimos)
      </em>
    <% end %><br />
  </div>

  <div class="input-group py-2">
    <%= f.label :password_confirmation, "Confirmar Contrase単a", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions py-2">
    <%= f.submit "Cambiar mi Contrase単a", class: "btn btn-success rounded-pill fw-semibold text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
