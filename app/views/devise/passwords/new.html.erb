<h2>¿Olvidó su Contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group py-2">
    <%= f.label :email, "Correo Electrónico", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.email_field :email, placeholder: "E-Mail", autocomplete: "email", autofocus: true, class: "form-control" %>
  </div>
  
  <div class="actions py-2">
    <%= f.submit "Envíame instrucciones para restablecer la contraseña", class: "btn btn-warning rounded-pill fw-semibold" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
